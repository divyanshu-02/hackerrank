#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n,k;
    cin>>n>>k;
    int h[n],i,max=0;
    for(i=0;i<n;i++)
    {
        cin>>h[i];
    }
    for(i=0;i<n;i++)
    {
        if(max<h[i])
            max=h[i];
    }
    if(max>k)
    {
        cout<<max-k;
    }
    else
    {
        cout<<"0";
    }
    return 0;
}
